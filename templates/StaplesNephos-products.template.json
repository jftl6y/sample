{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "ApimServiceName": {
      "type": "string"
    },
    "PolicyXMLBaseUrl": {
      "type": "string"
    }
  },
  "resources": [
    {
      "properties": {
        "description": "New product for IOS",
        "subscriptionRequired": true,
        "approvalRequired": false,
        "state": "published",
        "displayName": "IOS"
      },
      "name": "[concat(parameters('ApimServiceName'), '/IOS')]",
      "type": "Microsoft.ApiManagement/service/products",
      "apiVersion": "2019-01-01"
    },
    {
      "properties": {
        "description": "Administrators is a built-in group. Its membership is managed by the system. Microsoft Azure subscription administrators fall into this group.",
        "displayName": "Administrators",
        "type": "system",
        "builtIn": true
      },
      "name": "[concat(parameters('ApimServiceName'), '/IOS/administrators')]",
      "type": "Microsoft.ApiManagement/service/products/groups",
      "apiVersion": "2019-01-01",
      "dependsOn": [
        "[resourceId('Microsoft.ApiManagement/service/products', parameters('ApimServiceName'), 'IOS')]"
      ]
    },
    {
      "properties": {
        "value": "[concat(parameters('PolicyXMLBaseUrl'), '/IOS-productPolicy.xml')]",
        "format": "rawxml-link"
      },
      "name": "[concat(parameters('ApimServiceName'), '/IOS/policy')]",
      "type": "Microsoft.ApiManagement/service/products/policies",
      "apiVersion": "2019-01-01",
      "dependsOn": [
        "[resourceId('Microsoft.ApiManagement/service/products', parameters('ApimServiceName'), 'IOS')]"
      ]
    }
  ]
}